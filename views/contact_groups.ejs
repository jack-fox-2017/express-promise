    <title>EDIT CONTACT</title>

    <!-- Bootstrap -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
		<link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Slabo+24px" rel="stylesheet">
    <link href="../css/bootstrap.min.css" rel="stylesheet"> <!-- masih belum bisa -->
		<link href="../css/style.css" rel="stylesheet"> <!-- masih belum bisa -->
		<style media="screen">
		.body{
			font-family: 'Slabo 24px', serif;
		}
		.head{
			text-align: center;
			background-color: #f2f2f2;
			padding: 3% 20%;
		}
		.head ul{
			padding-left: 0
		}
		.head ul li{
			display: inline-block;
			ap
		}
		.head li a{
			color: #39171c;
			padding: 5px 10px;

		}
		.head li a:hover{
			color: #39171c;
			text-decoration: none;
			border: 4px solid #ef0069;
			padding: 5px 6px;
		}
		.form_data{
			text-align: center;
			margin-top: 20px;
		}
		.form_data h3{
			padding-bottom: 20px;
		}
		.form_data input{
			margin-bottom: 15px;
		}
		</style>
</head>
<body>
		<section>
			<div class="head">
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/contact">Contact</a></li>
					<li><a href="/profile">Profile</a></li>
					<li><a href="/address">Address</a></li>
					<li><a href="/groups">Groups</a></li>
			</div>

			<div class="col-md-12 form_data">
				<a href="/groups" class="btn btn-danger" > < Go Back</a>
				<h3>ADD CONTACT GROUP</h3>
				<form class="" action="/groups/contact_groups/<%=group[0].id%>" method="post">
					<p>Nama Group : </p>
					<select class="" name="groups_id">
						<% group.forEach(g => {%>
						<option value="<%= g.id %>" selected>
							<%= g.name_group %>
						</option>
						<%})%>
					 </select>
					 <br>
					 <br>
					<select class="" name="contact_id">
						<option value="">-- Pilih Kontak ID --</option>
						<% contacts.forEach(c => { %>
						<option value="<%= c.id %>">
							<%= c.name %>
						</option>
						<%})%>
				 	</select>
					<br>
					<br>
					<button type="submit" class="btn btn-default" name="button">Submit</button>
				</form>
			</div>

			<div class="detail">
				<div class="table_data col-md-12">
					<table class="table table-hover">
						<thead>
							<tr>
							  <th>No</th>
								<th>GROUPS</th>
								<th>CONTACTS</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							<% cgs.forEach((c, index) => { %>
							<tr>
								<td> <%= index+1 %> </td>
								<td> <%= c.name_group %> </td>
								<td> <%= c.name %></td>
								<td><a href="/groups/contact_groups/delete/<%= c.id%>">Delete</a></td>
							</tr>
							<% }) %>
						</tbody>
					</table>
				</div>
			</div>

		</section>

</body>
</html>
