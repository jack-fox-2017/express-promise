<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Address</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.5.0/css/bulma.min.css">
  </head>
  <body>
    <center>
      <section class="section">
      <div class="container">
    <h1 class="title">Edit Address</h1>
    <h2>

      <form action="/addresses/edit/<%=dataA.id%>" method="post">
        Street:<br>
        <input type="text" name="street" value="<%=dataA.street%>"><br>
        City:<br>
        <input type="text" name="city" value="<%=dataA.city%>"> <br>
        Zip Code:<br>
        <input type="text" name="zip_code" value="<%=dataA.zip_code%>"><br>
        Contact Id:<br>
        <div class="field has-addons has-addons-centered" >
          <div class="control">
            <div class="select">
              <select name="contact_id">
                Street:<br>
                <%dataC.forEach(c => {%>
                  <%
                    var selected = ""
                    if(c.id == dataA.contact_id)
                    {
                      selected = "selected"
                    }
                  %>
                <option value="<%=c.id%>" <%= selected %>  >
                  <%=c.name%>
                </option>
                <%})%>
              </select>
            </div>
          </div>
        </div>
        <br>
        <button class="button is-primary" type="submit" name="button">Save Changes</button> <br>
      </form>
    </h2>

  </div>
</section>
  </center>
  </body>
</html>
