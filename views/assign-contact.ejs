<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <%- include part/css %>
  </head>
  <body>
    <%- include part/menu %>

    <div class="col-md-4 col-md-offset-4">
      <form class="form-inline" action="/groups/<%= dataGroup.id %>/assign-contact" method="post">
        <input type="text" name="name" value="<%= dataGroup.name %>" class="form-control" disabled>
        <select  name="ContactId" class="form-control">
          <option value="" disabled selected>select Contact</option>
          <% kontak.forEach(getData => { %>
            <option value="<%= getData.id %>"><%= getData.name %></option>
          <% }) %>
        </select><br><br>
        <button type="submit" name="button" class="btn btn-info"><span class="glyphicon glyphicon-send"></span> &nbsp; Assign Contact to <%= dataGroup.name %></button>
      </form>
      <br>

    </div>
  </body>
</html>
