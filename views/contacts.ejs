<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Contacts</title>
  </head>
  <body>
    <h1>Contacts</h1>
    <table border="1">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>company</th>
          <th>Phone</th>
          <th>E-mail</th>
          <th colspan="2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% dataContacts.forEach(dC =>{ %>
        <tr>
          <td><%= dC.id %></td>
          <td><%= dC.name %></td>
          <td><%= dC.company %></td>
          <td><%= dC.phone %></td>
          <td><%= dC.email %></td>
          <td><a href="/contacts/edit/<%= dC.id %>">Edit</a></td>
          <td><a href="/contacts/delete/<%= dC.id %>">Delete</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <br><br><br>
    <form action="/contacts" method="post">
      <input type="text" name="name" placeholder="Name"><br>
      <input type="text" name="company" placeholder="Company"><br>
      <input type="text" name="phone" placeholder="Phone"><br>
      <input type="text" name="email" placeholder="Email"><br>
      <select class="" name="groups_id">
        <% dataGroups.forEach(dG =>{ %>
        <option value="<%=dG.id%>"><%= dG.group_name %></option>
        <% }) %>
      </select><br><br>
      <input type="submit" value="Submit">
    </form>
  </body>
</html>
